{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "backend/Dockerfile"
  },
  "deploy": {
    "startCommand": "sh -c \"/nakama/nakama migrate up --database.address \\\"$DATABASE_URL\\\" && exec /nakama/nakama --database.address \\\"$DATABASE_URL\\\"\"",
    "healthcheckPath": "/",
    "healthcheckTimeout": 60,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
